<% include ../partials/header %>

    <div class="container">
        <h1 style = "text-align: center;"><%=hotel.name%></h1>
        <div class="row">

            <div style="width: 30%; margin: 25px auto;">
                <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text"  name="hotel[name]" value = "<%=hotel.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number"  name="hotel[price]" value = "<%=hotel.price%> min = "0.01" step = "0.01"">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text"  name="hotel[image]" value = "<%=hotel.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="hotel[desc]" value = "<%=hotel.description%>">
                    </div>
                    <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= hotel.location %>">
</div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                    </div>

                </form>
                <a href="/hotels">Go back</a>
            </div>
        </div>




        <% include ../partials/footer %>
    </div>