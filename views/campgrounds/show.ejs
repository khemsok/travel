<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead">Travel</p>
            <div class = "list-group">
                <li class = "list-group-item active">Info 1</li>
                <li class = "list-group-item">Info 1</li>
                <li class = "list-group-item">Info 1</li>
            </div>
            <div id="map"></div>
        </div>
        
        
        
        
        <div class = "col-md-9">
            <img src = "<%=campground.image%>" class = "img-thumbnail img-responsive">
            <div class = "caption-full">
                <h4 class = "float-right">$<%=campground.price%> per night</h4>
                <h4><a><%=campground.name%></a></h4>
                <p><%=campground.description%> </p>
                <p><em>Submitted By <strong><%=campground.author.username%></strong>, <%=moment(campground.createdAt).fromNow()%></em></p>
                
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                  <a class="btn btn-warning btn-sm"href = "/campgrounds/<%=campground._id%>/edit">EDIT</a></button>
                  <form id = "delete-form" method = "POST" action = "/campgrounds/<%=campground._id%>?_method=delete">
                      
                    <button class="btn btn-danger btn-sm">DELETE</button>
                      
                  </form>
                <%    }%>
                </div>
          
            
            <div class = "card">
                <div class = "text-right">
                    <a class = "btn btn-success" href = "/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
             <%campground.comments.forEach(function(el){ %>
                <div class = "row">
                    <div class = "col-md-12">

                    <strong><%=el.author.username%></strong>
                    <span class = "float-right"><%=moment(el.createdAt).fromNow()%></span>
                    <p><%=el.text%></p>
                    
                    <%if(currentUser && el.author.id.equals(currentUser._id)){%>
                    
                    <a class = "btn btn-sm btn-warning" href = "/campgrounds/<%=campground._id%>/comments/<%=el._id%>/edit">Edit</a>
                    <form style = "display: inline;" action = "/campgrounds/<%=campground._id%>/comments/<%=el._id%>?_method=delete" method = "POST">
                        <button  class = "btn btn-sm btn-danger">Delete</button>
                        
                    </form>
                    <%}%>
                    </div>
                    
                </div>
                 <%  });%>

            </div>
        </div>
        
    </div>
    
    


</div>

<script>
  function initMap() {
    var lat = <%= campground.lat %>;
    var lng = <%= campground.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= campground.name %><br />
      <%= campground.location %></strong>
      <p><%= campground.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBLKw2MPECEreGmOe6D9kg38RG0Gg0j4ds&callback=initMap"></script>

<% include ../partials/footer %>